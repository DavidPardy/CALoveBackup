$('.cart-total-partial, .total_cell').html("<%=j render @cart %>");
$('.delete-item').bind('ajax:success', function() {
	$(this).closest('tr').fadeOut("slow", function(){
		$(this).closest('tr').remove();
	});	
	if ($('#checkout-table tr').length == 3) {
   	$('.checkout, .headers, .headers-item, .headers-size, .cart_price, .total_cell, #customPurchase, #paypalPurchase, .td-total').fadeOut("slow");
	}
});
    	