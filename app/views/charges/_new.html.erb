<html>
  <body id="charges-new">
      <div class="push-charges-new"></div>
      <div class="wrapper-charges-new">
        <div class="charges-container">
          <%= form_tag charges_path(id: @cart.id), :html => {:id => 'TESTID'} do %>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" id="TESTID"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-description="One-Time Charge"
                data-amount="<%= @cart.total_price * 100 %>"
                data-shipping-address="true" data-billing-address="true">
              </script>
          <% end %>
        </div>
      </div>
  </body>
</html>
