<html>
  <body id="products-show">
  	<div class="wrapper-show">
      <div class="push-show"></div>
        <div class="item-image">
          <%= form_for(@product, url: line_items_path(product_id: @product.id), html: {method: "update"}) do |f| %>
            <% if @product.id == 1 %>
              <div class="male-full-container">
                <div class="item-header-male">
                  <div class="item-title"><%= @product.name %></div>
                  <div class="line"><hr /></div>
                </div>
                <%= image_tag("https://s3.amazonaws.com/californialove/mens_black_front.jpg", :class=> "item-show-container-male-shirt") %>
                <div class="male-info">
                  <div class="item-details">
                    <div class="item-price ipm">$<%= @product.price %></div>
                  </div>
                  <div id="product_selects_male">
                    <table>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:size, @male_shirt_sizes.map { |value| value }) %></td><tr>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:color, @shirt_colors.map { |value| value }) %></td><tr>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:quantity, @quantity.map { |value| value }) %></td><tr>
                    </table>
                  </div>
                  <%= f.submit "Add to Cart", :class => "btn btn-mega btn-primary", :id => "add-to-cart-btn-male" %>
                </div>
              </div>
            <% end %>
            <% if @product.id == 2 %>
              <div class="female-full-container">
                <div class="item-header-female">
                  <div class="item-title"><%= @product.name %></div>
                  <div class="line"><hr /></div>
                </div>
                <%= image_tag("https://s3.amazonaws.com/californialove/womens_black_front.jpg", :class=> "item-show-container-female-shirt") %>
                <div class="female-info">
                  <div class="item-details">
                    <div class="item-price ipf">$<%= @product.price %></div>
                  </div>
                  <div id="product_selects_female">
                    <table>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:size, @female_shirt_sizes.map { |value| value }) %></td><tr>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:color, @shirt_colors.map { |value| value }) %></td><tr>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:quantity, @quantity.map { |value| value }) %></td><tr>
                    </table>
                  </div>
                  <%= f.submit "Add to Cart", :class => "btn btn-mega btn-primary", :id => "add-to-cart-btn-female" %>
                </div>
              </div>
            <% end %>
            <% if @product.id == 3 %>
              <div class="twill-full-container">
                <div class="item-header-twill">
                  <div class="item-title"><%= @product.name %></div>
                  <div class="line"><hr /></div>
                </div>
                <%= image_tag("https://s3.amazonaws.com/californialove/twill_hat.jpg", :class=> "item-show-container-twill-hat") %>
                <div class="twill-info">
                  <div class="item-details">
                    <div class="item-price iptwill">$<%= @product.price %></div>
                  </div>
                  <div id="product_selects_twill">
                    <table>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:quantity, @quantity.map { |value| value }) %></td></tr>
                      <tr><td style="padding: 30px;"></td></tr>
                      <%= f.hidden_field :color, :value => "Twill" %>
                      <%= f.hidden_field :size, :value => "One Size" %>
                    </table>
                  </div>
                  <%= f.submit "Add to Cart", :class => "btn btn-mega btn-primary", :id => "add-to-cart-btn-twill" %>
                </div>
              </div>
            <% end %> 
            <% if @product.id == 4 %>
              <div class="trucker-full-container">
                <div class="item-header-trucker">
                  <div class="item-title"><%= @product.name %></div>
                  <div class="line"><hr /></div>
                </div>
                <%= image_tag("https://s3.amazonaws.com/californialove/trucker_hat.jpg", :class=> "item-show-container-trucker-hat") %>
                <div class="trucker-info">
                  <div class="item-details">
                    <div class="item-price iptrucker">$<%= @product.price %></div>
                  </div>
                  <div id="product_selects_trucker">
                    <table>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:quantity, @quantity.map { |value| value }) %></td><tr>
                      <tr><td style="background-color: #f8f8f8;"> <%= f.select(:color, @hat_colors.map { |value| value }) %></td></tr>
                       <tr><td style="padding: 15px;"></td></tr>
                      <%= f.hidden_field :size, :value => "One Size" %>
                    </table>
                  </div>
                  <%= f.submit "Add to Cart", :class => "btn btn-mega btn-primary", :id => "add-to-cart-btn-trucker" %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
  </body>
</html>
