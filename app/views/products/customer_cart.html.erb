<html>
  <body id="customer-cart">
  	<div class="wrapper-customer-cart">
      <div class="push-customer-cart"></div>
      <div class="customer-cart-container">
		  	<div id="cart-title">Cart</div>
      	<div class="line"><hr /></div>
      	<div class="empty-cart"></div>
				<table id="checkout-table">
					<tr style="font-weight: bold;" class="cart-table-header">
						<th class="headers-item">Item</th>
						<th class="headers-size">Size</th>
						<th class="headers">Color</th>
						<th class="headers">Quantity</th>
						<th class="headers">Option</th>
						<th class="headers">Price</th>
					</tr>
					<% @cart.line_items.each do |item| %>
    				<tr class="top-bottom-padding" style="border-bottom: 1px solid #eee;"><td style="padding-right:33px;"><%= item.product.name %></td><td style="padding-right:35px;"><%= item.size %></td><td style="padding-right:35px;"><%= item.color %></td><td style="padding-right:35px;"><%= item.quantity %></td><td><%= link_to 'Remove', item, method: :delete %> </td><td style="padding-right:35px;">$<%= item.product.price %></td></tr>
  				<% end %>
				  <td style="padding: 20px 0px 20px 0px;" class="total_cell">Total: <%= render @cart %> </td>
				</table>
				<% if number_to_currency(@cart.total_price) == "$0.00" %>
				<% else %>
					<%= render "charges/new" %>
					<br>
					<%= link_to(image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), @cart.paypal_url(root_url), :id => 'paypalPurchase') %>
				<% end %>
	 		</div>
    </div>
  </body>
</html>
